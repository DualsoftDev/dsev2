<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>Ev2.S7Protocol</AssemblyName>
    <RootNamespace>Ev2.S7Protocol</RootNamespace>
    <Version>1.0.0</Version>
    <Description>Engine V2 Siemens S7 Protocol implementation for DS PLC Engine</Description>
    <Authors>Dualsoft</Authors>
    <Company>Dualsoft</Company>
    <Product>DS PLC Engine V2</Product>
  </PropertyGroup>

  <ItemGroup>
    <!-- Core Types and Constants -->
    <Compile Include="Core/Types.fs" />
    <Compile Include="Core/Constants.fs" />
    
    <!-- Address Parser -->
    <Compile Include="AddressParser/AddressParserTypes.fs" />
    <Compile Include="AddressParser/SiemensAddressParser.fs" />
    
    <!-- Protocol Layer -->
    <Compile Include="Protocol/S7Protocol.fs" />
    <Compile Include="Protocol/Session.fs" />
    
    <!-- Client Layer -->
    <Compile Include="Client/S7Client.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="FSharp.Core" Version="8.0.400" />
  </ItemGroup>

</Project>