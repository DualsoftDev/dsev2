<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>Ev2.LsProtocol</AssemblyName>
    <RootNamespace>Ev2.LsProtocol</RootNamespace>
    <Version>1.0.0</Version>
    <Description>Engine V2 LS Electric Protocol implementation for DS PLC Engine</Description>
    <Authors>Dualsoft</Authors>
    <Company>Dualsoft</Company>
    <Product>DS PLC Engine V2</Product>
  </PropertyGroup>

	<ItemGroup>
		<PackageReference Update="FSharp.Core" Version="8.0.400" />
	</ItemGroup>

  <ItemGroup>
    <!-- Core Types and Constants -->
    <Compile Include="Core/Types.fs" />
    <Compile Include="Core/Constants.fs" />
    
    <!-- Tag Parser (Legacy) -->
    <Compile Include="TagParser/XgtParserTypes.fs" />
    <Compile Include="TagParser/LsXgiTagParser.fs" />
    <Compile Include="TagParser/LsXgkTagParser.fs" />
    <Compile Include="TagParser/LsTagParser.fs" />
    
    <!-- Address Parser Types -->
    <Compile Include="AddressParser/AddressParserTypes.fs" />
    <Compile Include="AddressParser/LsAddressParser.fs" />
    
    <!-- Protocol Layer -->
    <Compile Include="Protocol/XgtTypes.fs" />
    <Compile Include="Protocol/XgtTag.fs" />
    <Compile Include="Protocol/XgtUtil.fs" />
    <Compile Include="Protocol/XgtFrameBuilder.fs" />
    <Compile Include="Protocol/XgtResponse.fs" />
    <Compile Include="Protocol\XgtComm.fs" />
    <Compile Include="Client\LsClient.fs" />
  </ItemGroup>

</Project>
