<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyName>Ev2.AbProtocol</AssemblyName>
    <RootNamespace>Ev2.AbProtocol</RootNamespace>
    <Version>1.0.0</Version>
    <Description>Engine V2 Allen-Bradley Protocol implementation for DS PLC Engine</Description>
    <Authors>Dualsoft</Authors>
    <Company>Dualsoft</Company>
    <Product>DS PLC Engine V2</Product>
  </PropertyGroup>
  
  <ItemGroup>
    <!-- Core Types and Constants -->
    <Compile Include="Core/Types.fs" />
    <Compile Include="Core/Constants.fs" />
    
    <!-- Address Parser -->
    <Compile Include="AddressParser/AddressParserTypes.fs" />
    <Compile Include="AddressParser/AbAddressParser.fs" />
    
    <!-- Protocol Layer -->
    <Compile Include="Protocol/PacketBuilder.fs" />
    <Compile Include="Protocol/PacketParser.fs" />
    <Compile Include="Protocol/Session.fs" />
    <Compile Include="Protocol/TagEnumerator.fs" />
    
    <!-- Client Layer -->
    <Compile Include="Client/AbClientUtil.fs" />
    <Compile Include="Client/AbClient.fs" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Update="FSharp.Core" Version="8.0.400" />
  </ItemGroup>
</Project>
