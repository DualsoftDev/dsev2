      "generalRules": [
        {
          "pattern": "CMD|COMMAND$",
          "apiType": "Command"
        },
        {
          "pattern": "STS|STATUS$",
          "apiType": "Status"
        },
        {
          "pattern": "VAL|VALUE$",
          "apiType": "Feedback"
        },
        {
          "pattern": "SET|CONFIG",
          "apiType": "Parameter"
        }
      ]
    },
    "confidenceBoosts": {
      "deviceHintBoost": 0.1,
      "apiHintBoost": 0.1,
