      {
        "name": "Standard",
        "pattern": "^(?<area>[A-Z0-9]+)_(?<device>[A-Z0-9_]+)_(?<api>[A-Z]+)$",
        "description": "AREA_DEVICE_API format",
        "deviceTypeHints": {
          "MOTOR": "Motor",
          "CYL": "Cylinder",
          "SENSOR": "Sensor",
          "VALVE": "Valve",
          "CONV": "Conveyor",
